.chour-fixed{
  width: 100%;
  height: 144rpx;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  background: #fff;
}
.chour{
  width: 80%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.chour text{
  font-size: 32rpx;
}
.half{
  width: 100%;
  margin-top: 150rpx;
}
.week{
  /* margin: 0 auto 15rpx 3%; */
  width: 15%;
  float: left;
}
.week-timetable{
  width: 85%;
  float: left;
}
.timeblock{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around; 
  height: 100rpx; 
  /* margin-bottom: 22rpx; */
  
}
.timeblock>view{
  display: flex;
  align-items: center;
  justify-content: center; 
  height: 36rpx; 
}
.timeblock>view>view{
  width: 44rpx;
  height: 44rpx;
}
.right{
  width: 100%;
  height: 100%;
}
.none{
  width: 100%;
  height: 100%;
}
.chour-bg1, .chour-bg2{
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  display: inline-block;
  margin-right: 29rpx;
}
.chour-bg1{
  background: #FF604B;
}
.chour-bg2{
  background: #989898;
}
.weekday{
  width: 85%;
  margin:30rpx auto auto 15%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.timetable{
  /* margin-top: 180rpx; */
}
.week-time{
  /* margin-bottom:22rpx; */
  font-size: 28rpx;
  padding-left: 25%;
  height: 100rpx;
  align-items: center;
  display: flex;
  justify-content: center;
}
.week-time:nth-of-type(odd), .timeblock:nth-of-type(odd){
  background: #F0F2F2;
}
.week-time:nth-of-type(even), .timeblock:nth-of-type(even){
  background: #FAFCFC;
}
.week-time:last-of-type, .timeblock:last-of-type{
  margin-bottom: 10rpx;
}
.active{
  color: #FF604B;
}